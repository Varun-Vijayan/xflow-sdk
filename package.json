{
  "name": "xflow-sdk",
  "version": "1.0.0",
  "description": "TypeScript SDK for XFlow - Temporal workflow orchestration made simple",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
